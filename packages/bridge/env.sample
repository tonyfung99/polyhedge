# Logging verbosity (debug | info | warn | error)
LOG_LEVEL=info

# API Server configuration
PORT=3001
HOST=0.0.0.0

# Enable test mode (simulates events every 10s without blockchain connection)
TEST_MODE=false

# HyperSync configuration (for monitoring StrategyPurchased events)
HYPERSYNC_ENDPOINT=https://arb-main.hypersync.xyz
# Optional overrides
HYPERSYNC_FROM_BLOCK=0
HYPERSYNC_POLL_INTERVAL_MS=5000
HYPERSYNC_BATCH_SIZE=500

# Market Maturity Monitor configuration (for automatic settlement)
MARKET_POLL_INTERVAL_MS=5000

# On-chain addresses and RPC providers
STRATEGY_MANAGER_ADDRESS=0xYourStrategyManagerAddressHere
HEDGE_EXECUTOR_ADDRESS=0xYourHedgeExecutorAddressHere
ARBITRUM_RPC_URL=https://arb-mainnet.alchemyapi.io/v2/your-key
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/your-key

# Strategy definitions JSON (defaults to strategies.json relative to repo root)
STRATEGY_DEFINITIONS_PATH=../strategies.json

# Vincent SDK configuration (for hackathon - recommended)
# Set to true to use Vincent PKP-based signing instead of direct private key
USE_VINCENT=false
VINCENT_APP_ID=your-vincent-app-id-here
LIT_NETWORK=datil-dev

# Polymarket CLOB credentials (legacy - only needed if USE_VINCENT=false)
# When USE_VINCENT=true, this can be omitted as admin delegates via Vincent
POLYMARKET_PRIVATE_KEY=0xaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa
POLYMARKET_HOST=https://clob.polymarket.com
POLYMARKET_CHAIN_ID=137
POLYMARKET_SIGNATURE_TYPE=1
POLYMARKET_FUNDER_ADDRESS=0xYourPolymarketProfileAddress

# Execution controls
MAX_ORDER_CONCURRENCY=2

